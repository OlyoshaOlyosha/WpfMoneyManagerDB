<Application x:Class="MoneyManagerX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MoneyManagerX"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle">
                <Setter Property="Button.Width" Value="Auto"/>
                <Setter Property="Button.Height" Value="40px"/>
                <Setter Property="Button.FontSize" Value="18px"/>
                <Setter Property="Button.Margin" Value="0 20px 0 0"/>
                <Setter Property="Button.Background" Value="{StaticResource ElementsColor}"/>
                <Setter Property="Button.Foreground" Value="{StaticResource SecondaryColor}"/>
                <Setter Property="Button.Cursor" Value="Hand"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
   