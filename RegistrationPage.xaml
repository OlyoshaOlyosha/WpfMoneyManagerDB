<Page x:Class="MoneyManagerX.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerX"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Grid.Row="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock Text="Авторизация"
                HorizontalAlignment="Center"
                FontSize="24px"
                Foreground="{StaticResource TextColor}"
               />
            <TextBox 
                Width="200px"
                Height="30px"
                Margin="10px"
                Name="NameTextBox"
                Text="Введите Имя"/>
            <TextBox Width="200px"
                Height="30px"
                Margin="10px"
                Name="RegLoginTextBox"
                Text="Введите логин"/>
            <PasswordBox Width="200px"
                Height="30px"
                Margin="10px"
                Name="RegPasswordTextBox"/>
            <Button Width="Auto"
                Height="40px"
                Content="Зарегистрироваться"
                Style="{StaticResource ButtonStyle}" 
                    Click="Button_Click"/>
            <TextBlock Text="Вернуться Назад"
                       Foreground="{StaticResource TextColor}"
                       HorizontalAlignment="Center"
                       Margin="0 10px 0 0"
                       Cursor="Hand" MouseDown="TextBlock_MouseDown"/>
        </StackPanel>
    </Grid>
</Page>
