<Page x:Class="MoneyManagerX.SpendingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerX"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SpendingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Расходы:"
           FontSize="48px"
           VerticalAlignment="Center"
           Margin="30px 0 0 0"
           Foreground="{StaticResource TextColor}"
           />
        <TextBlock Text="0.0 руб"
           Grid.Column="1"
           HorizontalAlignment="Right"
           FontSize="64px"
           VerticalAlignment="Center"
           Margin="0 0 50px 0"
           FontWeight="Bold"
           Foreground="{StaticResource TextColor}"
   />
        <StackPanel Grid.Row="1">
            <TextBlock Text="Расходы"
               Foreground="{StaticResource TextColor}"
               FontSize="36px"
               HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button Content="Выбрать Категорию"
            Width="300px"
            Height="60px"
            Background="{StaticResource ElementsColor}"
            Foreground="{StaticResource TextColor}"
            FontSize="24px"
            FontWeight="Bold"/>
            <Button Content="Добавить Расходы"
            Width="300px"
            Height="60px"
            Background="{StaticResource SecondaryColor}"
            Foreground="{StaticResource PrimaryColor}"
            FontSize="24px"
            FontWeight="Bold"
            Margin="0 100px 0 30px"/>
            <Button Content="Добавить Категорию"
            Width="300px"
            Height="60px"
            Background="{StaticResource SecondaryColor}"
            Foreground="{StaticResource PrimaryColor}"
            FontSize="24px"
            FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
